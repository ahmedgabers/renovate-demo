{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "config:recommended"],
  "enabledManagers": ["dockerfile", "helmv3", "regex"],
  "branchPrefix": "renovate/",
  "regexManagers": [
    {
      "fileMatch": ["^Chart\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?) registryUrl=(?<registryUrl>.*?)\\nversion: (?<currentValue>.*)\\n[\\s\\S]*?dependencies:[\\s\\S]*?- name: \\k<depName>\\n    version: (?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "{{{registryUrl}}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["cert-manager"],
      "groupName": "cert-manager-sync",
      "groupSlug": "cert-manager-sync",
      "commitMessageTopic": "cert-manager chart and dependency versions"
    },
    {
      "matchManagers": ["helmv3"],
      "matchPackageNames": ["cert-manager"],
      "enabled": false
    },
    {
      "matchManagers": ["helmv3"],
      "matchUpdateTypes": ["minor", "patch"],
      "excludePackageNames": ["cert-manager"],
      "groupName": "helm non-major updates",
      "groupSlug": "helm-non-major"
    },
    {
      "matchManagers": ["helmv3"],
      "matchUpdateTypes": ["major"],
      "excludePackageNames": ["cert-manager"],
      "groupName": "helm major updates",
      "groupSlug": "helm-major"
    }
  ],
  "prCreation": "immediate",
  "schedule": ["at any time"],
  "rangeStrategy": "bump",
  "labels": ["dependencies", "helmv3"],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
  "prBody": "This PR updates the Helm chart {{depName}} from version {{currentVersion}} to {{newVersion}}."
}
