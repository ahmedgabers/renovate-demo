{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "config:recommended"],
  "enabledManagers": ["dockerfile", "helmv3"],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "matchManagers": ["helmv3"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "helm non-major updates",
      "groupSlug": "helm-non-major"
    },
    {
      "matchManagers": ["helmv3"],
      "matchUpdateTypes": ["major"],
      "groupName": "helm major updates",
      "groupSlug": "helm-major"
    },
    {
      "matchManagers": ["helmv3"],
      "bumpVersion": "patch"
    }
  ],
  "prCreation": "immediate",
  "schedule": ["at any time"],
  "rangeStrategy": "bump",
  "labels": ["dependencies", "helmv3"],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
  "prBody": "This PR updates the Helm chart {{depName}} from version {{currentVersion}} to {{newVersion}}."
}
